<% layout('layout/boilerplate.ejs') %>

<div class="row">
    <div class="col-lg-8 offset-lg-2">
        <div class="alert alert-danger" role="alert">
            <h1><%= err.status %>: <%= err.message %> </h1>
            <% if ( process.env.MODE_ENV !== "production" ) { %>
                <hr>
                <div><%= err.stack %></div>
            <% } %>
        </div>
    </div>
</div>